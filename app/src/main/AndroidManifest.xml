<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.webmingo.serviingovendors">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"


        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ServiingoVendors"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activity.SpleshScreenActivity"

            android:theme="@style/Theme.ServiingoVendors.NoActionBar" />
        <activity
            android:name=".Activity.Auth.OTP_VerificationActivity"
            android:theme="@style/Theme.ServiingoVendors.NoActionBar" />
        <activity
            android:name=".Activity.Auth.SendOTP"
            android:theme="@style/Theme.ServiingoVendors.NoActionBar" />
        <activity
            android:name=".Activity.Auth.CratePasswordActivity"
            android:theme="@style/Theme.ServiingoVendors.NoActionBar" />
        <activity
            android:name=".Activity.Auth.LoginActivity"
            android:theme="@style/Theme.ServiingoVendors.NoActionBar" />
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/Theme.ServiingoVendors.NoActionBar" />
        <activity
            android:name=".Activity.Auth.RegisterActivity"

            android:theme="@style/Theme.ServiingoVendors.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>