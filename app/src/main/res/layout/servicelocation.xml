<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/bgcolor">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/bgcolor">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_30sdp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    app:cardBackgroundColor="@color/bgcolor"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="@dimen/_3sdp"
                    app:contentPadding="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"

                            android:layout_marginTop="@dimen/_13sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:padding="@dimen/_8sdp"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="Start earning straight away. Share your details and weâ€™ll reach out with next steps.
!!"
                            android:textAlignment="center"
                            android:textColor="@color/head_lightBlue" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"

                            android:layout_marginTop="@dimen/_3sdp"
                            android:fontFamily="@font/roboto_bold"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="Select Your Service Location &amp; Services
 "
                            android:textColor="@color/black" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/allsideborder"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/roboto_bold"
                                android:padding="@dimen/_8sdp"
                                android:paddingLeft="@dimen/_3sdp"
                                android:text="Serve State"
                                android:textColor="#9a9a9a" />

                            <Spinner
                                android:id="@+id/ServeStateSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="@dimen/_3sdp"
                                android:background="@drawable/abc_spinner_mtrl_am_alpha"
                                android:backgroundTint="@color/black"
                                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_3sdp"
                                android:spinnerMode="dropdown"

                                android:textColor="@color/black_"
                                android:textColorHint="@color/black_"
                                android:theme="@style/ThemeOverlay.AppCompat.Light" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/allsideborder"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/roboto_bold"
                                android:padding="@dimen/_8sdp"
                                android:paddingLeft="@dimen/_3sdp"
                                android:text="Serve City "
                                android:textColor="#9a9a9a" />

                            <Spinner
                                android:id="@+id/ServeCitySpinner"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="@dimen/_3sdp"
                                android:background="@drawable/abc_spinner_mtrl_am_alpha"
                                android:backgroundTint="@color/black"
                                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_3sdp"
                                android:spinnerMode="dropdown"

                                android:textColor="@color/black_"
                                android:textColorHint="@color/black_"
                                android:theme="@style/ThemeOverlay.AppCompat.Light" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_13sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/allsideborder"

                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/roboto_bold"
                                android:padding="@dimen/_8sdp"
                                android:paddingLeft="@dimen/_3sdp"
                                android:text="Select Category "
                                android:textColor="#9a9a9a" />

                            <Spinner
                                android:id="@+id/categorysspinner"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_margin="@dimen/_3sdp"
                                android:background="@drawable/abc_spinner_mtrl_am_alpha"
                                android:backgroundTint="@color/black"
                                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_8sdp"
                                android:paddingRight="@dimen/_3sdp"
                                android:spinnerMode="dropdown"

                                android:textColor="@color/black_"
                                android:textColorHint="@color/black_"
                                android:theme="@style/ThemeOverlay.AppCompat.Light" />
                        </LinearLayout>

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"

                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="Choose Sub Categories"
                            android:textColor="@color/black_" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerSubcategories"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_below="@+id/note"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            tools:itemCount="2"
                            tools:listitem="@layout/packageitem" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"

                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/roboto"
                            android:paddingLeft="@dimen/_3sdp"
                            android:text="Choose Pincodes"
                            android:textColor="@color/black_" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerPincode"
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_below="@+id/note"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            tools:itemCount="2"
                            tools:listitem="@layout/packageitem" />
                        <!--   <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginLeft="@dimen/_10sdp"

                               android:layout_marginTop="@dimen/_3sdp"
                               android:fontFamily="@font/roboto_bold"
                               android:paddingLeft="@dimen/_3sdp"
                               android:text="Select Your Service Location &amp; Services: "
                               android:textColor="@color/black" />
                 -->
                        <!--    <TextView
                            android:id="@+id/TV_Payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:background="@drawable/rect_light_blue"
                            android:fontFamily="@font/roboto_bold"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:text="Apply Now"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_18sdp"
                            android:textStyle="bold" />-->


                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/submitgernalform"
                            style="@style/RegistrationFAB"
                            android:layout_width="wrap_content"

                            android:contentDescription="TODO"

                            app:backgroundTint="@color/head_lightBlue"
                            app:fabSize="normal"


                            app:rippleColor="@color/head_lightBlue"

                            app:srcCompat="@drawable/ic_arrow"
                            app:tint="@color/white" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>
</layout>